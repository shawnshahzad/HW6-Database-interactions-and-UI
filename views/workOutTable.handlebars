<h1>Work OUT Tracker</h1>

<form id="addExercise">
    <label for="exercise">Workout Routine:</label>
    <input type="text" name="exercise" id="exercise" placeholder=" AddExcercise" value="{{results.name}}"><br>
    
    <label for="reps">Reps:</label>
    <input type="number" name="reps" id="reps" placeholder=" Add Reps" value="{{results.reps}}"><br>
    
    <label for="weight"> Weight:</label>
    <input type="number" name="weight" id="weight" placeholder=" Add Weight" value="{{results.weight}}"><br>
    
    <label for="date">Date:</label>
    <input type="date" name="date" id="date" placeholder="Date" value="{{results.date}}"><br>
    
    <label for="unit">Unit:</label>
    <input type="text" name="unit" id="unit" placeholder="Add lbs or kg" value="{{results.unit}}"><br>

    <input type="submit" name="Add Exercise" value = "Add Exercise" id="addExerciseButton">
</form>

<br>
<br>
<hr>

<table id="workOut">
    <tr>
        <th>Name</th>
        <th>Reps</th>
        <th>Weight</th>
        <th>Date</th>
        <th>Unit</th>
    {{#if results}}
        <th>Update</th>
        <th>Delete</th>

    {{/if}}
        
    </tr>
    
    {{#if results}}
        {{#each results}}
            <tr>
                <td>{{this.name}}</td>
                <td>{{this.reps}}</td>
                <td>{{this.weight}}</td>
                <td>{{this.date}}</td>
                <td>{{this.unit}}</td>
                <td><a href="/updateWorkOutTable?id={{this.id}}"><input type="button" value="Update"></a></td>
                <td>

                    <input type="button" name="delete" value="Delete" onClick="deleteData('dataTable',{{this.id}})">
                    <input type="hidden" id="delete{{this.id}}">
                </td>
            </tr>
        {{/each}}
    {{/if}}
</table>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.24.0/locale/af.js"></script>
<script src="./script.js"></script>